<!-- VisitTile.razor -->
<div class="visit-tile">
    <div>Business ID: @BusinessId</div>
    <div>Visit Time: @VisitTime</div>
    <div>Email: @Email</div>
    <div>Phone Number: @PhoneNumber</div>
    <div>Confirmed: @(IsConfirmed ? "Yes" : "No")</div>
    <button @onclick="() => OnDeleteVisit.InvokeAsync(Id)">Delete Visit</button>
</div>

@code {
    [Parameter] public int Id { get; set; }
    [Parameter] public int BusinessId { get; set; }
    [Parameter] public DateTime VisitTime { get; set; }
    [Parameter] public string Email { get; set; }
    [Parameter] public string PhoneNumber { get; set; }
    [Parameter] public bool IsConfirmed { get; set; }
    [Parameter] public EventCallback<int> OnDeleteVisit { get; set; }
}